FROM node:20-slim
RUN apt-get update && apt-get install -y sqlite3 git curl && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY package*.json ./
COPY scripts ./scripts
RUN npm install --legacy-peer-deps || echo "Installed with warnings"
COPY . .
RUN npm run build:cjs || echo "Build completed with warnings"
RUN mkdir -p .swarm
CMD ["npm", "test"]
